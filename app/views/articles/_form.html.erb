<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title , class: 'd-flex justify-content-center' %>
    <div><%= form.text_field :title, class: 'form-control mx-auto', style:'width: 15rem;' %><br></div> 
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body, class: 'd-flex justify-content-center' %> 
    <%= form.text_area :body, class: 'form-control mx-auto' , style:'width: 30rem; height: 10rem' %> <br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class= 'd-flex justify-content-center' >
    <button type="submit" class="btn btn-primary mb-3">Crear</button>
  </div>
  <br/>

  <div class= 'd-flex justify-content-center' >
    <%= form.label :status %>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <h4><%=current_user.id%></h4>
<% end %>
