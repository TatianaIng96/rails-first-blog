<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter, class:'d-flex justify-content-center' %>
    <%= form.text_field :commenter, class: 'form-control mx-auto', style:'width: 15rem;'%>
  </p>
  <p>
    <%= form.label :body, class:'d-flex justify-content-center'%>
    <%= form.text_area :body, class: 'form-control mx-auto', style:'width: 30rem; height: 10rem' %>
  </p>
  <p class= 'd-flex justify-content-center' >
    <button type="submit" class="btn btn-primary mb-3">Crear</button>
  </p>

  <p class= 'd-flex justify-content-center'>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

<% end %>
